N=1000 #Number of agents


class Agent:
    def __init__(self, opinion, activity):
        self.n=
        self.x=opinion
        self.a=activity
        
    def changeOpinion(opinion):
        self.x=opinion
    def setActivity(acitivity):
        self.a=activity
    def getNumber():
        return self.n
    
def activityDistribution(agent):
    gamma=2.1
    eppsilon = 0.01
    return (1-gamma)/(1-eppsilon**(1-gamma)) agent.getNumber()**(-gamma)
    
